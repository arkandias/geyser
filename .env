GEYSER_ENV=production
GEYSER_DOMAIN=geyser.example.com
GEYSER_TENANCY=single
GEYSER_LOG_LEVEL=info
GEYSER_AS_SERVICE=false

# Allowed IPs for Keycloak restricted access
#NGINX_AUTH_ADMIN_ALLOW=0.0.0.0/0

# WebDAV configuration for uploading backups
#WEBDAV_URL=https://nextcloud.example.com
#WEBDAV_USER=<username>
#WEBDAV_PASS=<password>
#WEBDAV_DIR=geyser/backups

