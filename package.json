{
  "name": "geyser",
  "description": "Course Assignment Flow",
  "author": "Julien Hauseux <julien.hauseux@gmail.com>",
  "license": "AGPL-3.0-only",
  "private": true,
  "type": "module",
  "engines": {
    "node": "24",
    "pnpm": "10"
  },
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "pnpm -r run build",
    "build:shared": "pnpm --filter @geyser/shared run build",
    "test": "pnpm -r --parallel run test",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit && pnpm run build:shared && pnpm -r --parallel run typecheck",
    "validate": "pnpm run format:check && pnpm run test && pnpm run typecheck && pnpm run lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.10.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
