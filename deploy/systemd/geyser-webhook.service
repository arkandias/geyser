[Unit]
Description=Geyser Webhook Service
After=geyser.service
Requires=geyser.service

[Service]
Type=simple
User=<username>
WorkingDirectory=<install-dir>
ExecStart=<install-dir>/cli/geyser webhook-start
ExecStopPost=<install-dir>/cli/geyser webhook-stop
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
