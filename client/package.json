{
  "name": "@geyser/client",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:app": "vue-tsc --noEmit -p tsconfig.app.json",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:app",
    "codegen:schema": "graphql-codegen --config codegen.schema.ts",
    "codegen:documents": "graphql-codegen --config codegen.documents.ts",
    "codegen": "pnpm codegen:schema && pnpm codegen:documents"
  },
  "dependencies": {
    "@geyser/shared": "workspace:*",
    "@urql/exchange-auth": "^2.2.1",
    "@urql/vue": "^1.4.3",
    "axios": "^1.10.0",
    "dompurify": "^3.2.6",
    "driver.js": "^1.3.6",
    "graphql": "^16.11.0",
    "marked": "^16.0.0",
    "papaparse": "^5.5.3",
    "quasar": "^2.18.1",
    "vue": "^3.5.17",
    "vue-i18n": "^11.1.9",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.47.5",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/client-preset": "^4.8.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@quasar/vite-plugin": "^1.9.0",
    "@types/papaparse": "^5.3.16",
    "@urql/devtools": "^2.0.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "glob": "^11.0.3",
    "happy-dom": "^18.0.1",
    "sass-embedded": "^1.89.2",
    "vite": "^7.0.4",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  }
}
