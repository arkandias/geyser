{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Language and Environment */
    "moduleDetection": "force",

    /* Module */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Emit */
    "noEmit": true,

    /* Project */
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.node.tsbuildinfo"
  },
  "include": ["*.ts"]
}
