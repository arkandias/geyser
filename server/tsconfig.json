{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Language and Environment */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Module */
    "paths": {
      "@geyser/shared": ["../shared/dist"]
    },

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "verbatimModuleSyntax": false
  },
  "references": [{ "path": "../shared" }],
  "include": ["*.ts", "src/**/*.ts"]
}
